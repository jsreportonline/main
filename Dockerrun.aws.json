{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "run",
      "host": {
        "sourcePath": "/var/run"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/proxy/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "main",
      "image": "jsreportonline/main",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 5488,
          "containerPort": 5488
        }
      ],
      "links": [
        "tasks"
      ],
      "mountPoints": [
        {
          "sourceVolume": "run",
          "containerPath": "/run-data"
        }
      ]
    },
    {
      "name": "tasks",
      "image": "jsreportonline/tasks",
      "essential": true,
      "memory": 64,
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000
        }
      ],
      "mountPoints": []
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 64,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "main"
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ]
    }
  ]
}
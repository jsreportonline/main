{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "docker",
      "host": {
        "sourcePath": "/var/run/docker.sock"
      }
    },
    {
      "name": "nginx-conf",
      "host": {
        "sourcePath": "/var/app/current/nginx.conf"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "main",
      "memory": 128,
      "image": "jsreportonline/main",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 5488,
          "containerPort": 5488
        }
      ],
      "links": [
        "tasks",
        "phantom-pdf"
      ],
      "mountPoints": [
        {
          "sourceVolume": "docker",
          "containerPath": "/var/run/docker.sock"
        }
      ]
    },
    {
      "name": "tasks",
      "memory": 64,
      "image": "jsreportonline/tasks",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000
        }
      ],
      "mountPoints": []
    },
    {
      "name": "phantom-pdf",
      "memory": 64,
      "image": "jsreportonline/phantom-pdf",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 4000,
          "containerPort": 4000
        }
      ],
      "mountPoints": []
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 64,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "main"
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-conf",
          "containerPath": "/etc/nginx/nginx.conf",
          "readOnly": true
        }
      ]
    }
  ]
}